body {
  background-color: #f8f9fb;
  font-family: Roboto;
  /* Standard skrifttype og baggrundsfarve */
}

h1 {
  color: #0168ff;
  font-size: xx-large;
  /* Standard header med farven blå og skrifttypen Roboto */
}

p {
  color: #47505e;
  /* Standard paragraf med farven grå og skrifttypen Roboto */
}

#loginboks {
  width: 400px;
  height: auto;
  text-align: center;
  margin: auto;
  background-color: #fdfdfd;
  border-radius: 12px;
  box-shadow: 1px 1px 3px #c9c9c9;
  padding-top: 10px;
  padding-bottom: 40px;
  padding-left: 30px;
  padding-right: 30px;
  /* Formatering til loginboksen */
}

#logo {
  text-align: center;
  max-width: 100%;
  height: auto;
}

input.inputtekst {
  border-radius: 16px;
  font-size: large;
  height: 30px;
  border-style: none;
  padding-left: 10px;
  background-color: #ffffff;
  box-shadow: 1px 1px 3px #c9c9c9;
  /* Formatering til tekstfelter */
}

input.inputknap {
  border-radius: 16px;
  font-size: large;
  width: 200px;
  height: 30px;
  background-color: #0168ff;
  color: #dfe1e6;
  border-style: none;
  font-family: Roboto;
  /* Formatering til knap */
}

.inputknap:hover {
  background-color: #0051c9;
  /* Farve til når mus er over knap */
}

.inputknap:focus {
  background-color: #0042a3;
  /* Farve når man klikker på knap */
}

.sidebar {
  background-color: #0168ff;
  width: 66px;
  height: 100%;
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  overflow: hidden;
}


